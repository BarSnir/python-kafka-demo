CREATE STREAM ADS_PRICE_HISTORY_V3 WITH (KAFKA_TOPIC='json-sr-price-change', PARTITIONS=3, REPLICAS=1, VALUE_FORMAT='JSON_SR') AS SELECT 
AFTER->TOKEN,
FORMAT_TIMESTAMP(FROM_UNIXTIME(UNIX_TIMESTAMP()),'yyyy-MM-dd HH:mm:ss.SSS', 'GMT+3') ACTION_TIME,BEFORE->PRICE AS PREV_PRICE,
AFTER->PRICE AS CURRNET_PRICE,
AFTER->PRICE - BEFORE->PRICE AS PRICE_CHANGE
FROM ADS_V2 EMIT CHANGES;